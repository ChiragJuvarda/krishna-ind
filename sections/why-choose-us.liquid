{% comment %}
  Why Choose Us Section - Custom Unique Design
  Features section with icon boxes
{% endcomment %}

{{ 'why-choose-us.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .why-choose-us-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .why-choose-us-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .why-choose-us-{{ section.id }} .why-choose-heading {
    color: {{ section.settings.heading_color }};
  }

  .why-choose-us-{{ section.id }} .why-choose-heading .highlight {
    color: {{ section.settings.highlight_color }};
  }

  .why-choose-us-{{ section.id }} .why-choose-description {
    color: {{ section.settings.text_color }};
  }

  .why-choose-us-{{ section.id }} .feature-box {
    border-color: {{ section.settings.box_border_color }};
    background: {{ section.settings.box_background }};
  }

  .why-choose-us-{{ section.id }} .feature-box__icon {
    color: {{ section.settings.icon_color }};
  }

  .why-choose-us-{{ section.id }} .feature-box__title {
    color: {{ section.settings.box_title_color }};
  }

  .why-choose-us-{{ section.id }} .feature-box__text {
    color: {{ section.settings.box_text_color }};
  }
{%- endstyle -%}

<div class="why-choose-us why-choose-us-{{ section.id }}">
  <div class="page-width">
    
    {%- comment -%} Section Header {%- endcomment -%}
    <div class="why-choose-header text-{{ section.settings.text_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="why-choose-heading">
          {%- assign heading_parts = section.settings.heading | split: section.settings.highlight_text -%}
          {%- if heading_parts.size > 1 and section.settings.highlight_text != blank -%}
            {{ heading_parts[0] }}<span class="highlight">{{ section.settings.highlight_text }}</span>{{ heading_parts[1] }}
          {%- else -%}
            {{ section.settings.heading }}
          {%- endif -%}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="why-choose-description">
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Feature Boxes {%- endcomment -%}
    {%- if section.blocks.size > 0 -%}
      <div class="why-choose-features">
        <div class="feature-grid columns-{{ section.settings.columns_desktop }} columns-mobile-{{ section.settings.columns_mobile }}">
          {%- for block in section.blocks -%}
            <div class="feature-box" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="feature-box__icon-wrapper">
                  <div class="feature-box__icon">
                    {{ block.settings.icon }}
                  </div>
                </div>
              {%- endif -%}

              {%- if block.settings.title != blank -%}
                <h3 class="feature-box__title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <p class="feature-box__text">{{ block.settings.text }}</p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

  </div>
</div>

