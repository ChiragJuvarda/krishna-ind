{% comment %} Product Cards section - placeholder for user-provided HTML/CSS/JS {% endcomment %}

<section id="product-cards" class="product-cards-section">
  <link rel="stylesheet" href="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.css" />
  <link rel="stylesheet" href="{{ 'product-cards.css' | asset_url }}" />
  <div id="product-cards-container"></div>
    <script src="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.js" defer></script>
    <script src="{{ 'product-cards.js' | asset_url }}" defer></script>

  {% comment %} Render selected collection products as slides {% endcomment %}
  {% if section.settings.collection != blank %}
    {% assign coll = collections[section.settings.collection] %}
    {% if coll and coll.products_count > 0 %}
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for product in coll.products | slice: 0, section.settings.products_count %}
            <div class="swiper-slide">
              <div class="picture">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}">
                  {% else %}
                    <img src="{{ 'yog-laxmi-logo.png' | asset_url }}" alt="{{ product.title }}">
                  {% endif %}
                </a>
              </div>
              <div class="detail">
                <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
                <span>{{ product.price | money }}</span>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="swiper-pagination"></div>
        <div class="swiper-scrollbar"></div>
      </div>
    {% else %}
      <p>No products found in the selected collection.</p>
    {% endif %}
  {% else %}
    <p>Please select a collection in the section settings to display products.</p>
  {% endif %}

</section>

{% schema %}
{
  "name": "Product Cards",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "number",
      "id": "products_count",
      "label": "Number of products",
      "default": 6,
      "min": 1,
      "max": 20
    }
  ],
  "blocks": [],
  "presets": [
    { "name": "Product Cards" }
  ]
}
{% endschema %}
