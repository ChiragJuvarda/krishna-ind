{% comment %} Product Cards section - placeholder for user-provided HTML/CSS/JS {% endcomment %}

<section id="product-cards" class="product-cards-section">
  <link rel="stylesheet" href="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.css" />
  <link rel="stylesheet" href="{{ 'product-cards.css' | asset_url }}" />
  <!-- debug: small helper (remove in production) -->
  <div class="product-cards-debug" style="position:relative;font-size:12px;color:#666;padding:8px 0;text-align:center;">
    <strong>Debug:</strong> Use Add block â†’ Slide to add custom images or leave empty to use 'frontpage' collection
  </div>
  <div id="product-cards-container"></div>
    <script src="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.js" defer></script>
    <script src="{{ 'product-cards.js' | asset_url }}" defer></script>

  {% comment %} If editor blocks are present render them (image slides). Otherwise fall back to frontpage collection. {% endcomment %}
  {% if section.blocks.size > 0 %}
    <div class="swiper-container" style="--card-bg: #ffffff; --card-border-color: #e6e6e6; --card-border-width: 0px;" data-autoplay="false" data-show-dots="true">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <div class="swiper-slide hover-effect-lift">
              <div class="picture">
                {% if block.settings.image != blank %}
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}">
                      <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title }}">
                    </a>
                  {% else %}
                    <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title }}">
                  {% endif %}
                {% endif %}
              </div>
              <div class="detail">
                <h3>{{ block.settings.title }}</h3>
                <span>{{ block.settings.subtitle }}</span>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-scrollbar"></div>
    </div>
  {% else %}
    {% assign coll = collections['frontpage'] %}
    {% if coll and coll.products_count > 0 %}
      <div class="swiper-container" style="--card-bg: #ffffff; --card-border-color: #e6e6e6; --card-border-width: 0px;" data-autoplay="false" data-show-dots="true">
        <div class="swiper-wrapper">
          {% for product in coll.products | slice: 0, 6 %}
            <div class="swiper-slide hover-effect-lift">
              <div class="picture">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}">
                  {% else %}
                    <img src="{{ 'yog-laxmi-logo.png' | asset_url }}" alt="{{ product.title }}">
                  {% endif %}
                </a>
              </div>
              <div class="detail">
                <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
                <span>{{ product.price | money }}</span>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-scrollbar"></div>
      </div>
    {% else %}
      <p>No products found in the fallback collection 'frontpage'.</p>
    {% endif %}
  {% endif %}

</section>

{% schema %}
{
  "name": "Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "text", "id": "subtitle", "label": "Subtitle" },
        { "type": "url", "id": "link", "label": "Link (optional)" }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    { "name": "Product Cards" }
  ]
}
{% endschema %}
