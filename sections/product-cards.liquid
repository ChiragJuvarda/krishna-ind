{% comment %} Product Cards section - placeholder for user-provided HTML/CSS/JS {% endcomment %}

<section id="product-cards" class="product-cards-section">
  <link rel="stylesheet" href="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.css" />
  <link rel="stylesheet" href="{{ 'product-cards.css' | asset_url }}" />
  <!-- debug: show current section settings (removed settings; using fallback collection) -->
  <div class="product-cards-debug" style="position:relative;font-size:12px;color:#666;padding:8px 0;text-align:center;">
    <strong>Debug:</strong> Settings removed â€” using fallback collection 'frontpage'
  </div>
  <div id="product-cards-container"></div>
    <script src="https://unpkg.com/swiper@6.8.4/swiper-bundle.min.js" defer></script>
    <script src="{{ 'product-cards.js' | asset_url }}" defer></script>

  {% comment %} Settings removed: use fallback collection 'frontpage' and defaults {% endcomment %}
  {% assign coll = collections['frontpage'] %}
  {% if coll and coll.products_count > 0 %}
    <div class="swiper-container" style="--card-bg: #ffffff; --card-border-color: #e6e6e6; --card-border-width: 0px;" data-autoplay="false" data-show-dots="true">
      <div class="swiper-wrapper">
        {% for product in coll.products | slice: 0, 6 %}
          <div class="swiper-slide hover-effect-lift">
            <div class="picture">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title }}">
                {% else %}
                  <img src="{{ 'yog-laxmi-logo.png' | asset_url }}" alt="{{ product.title }}">
                {% endif %}
              </a>
            </div>
            <div class="detail">
              <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
              <span>{{ product.price | money }}</span>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="swiper-pagination"></div>
      <div class="swiper-scrollbar"></div>
    </div>
  {% else %}
    <p>No products found in the fallback collection 'frontpage'.</p>
  {% endif %}

</section>

{% schema %}
{
  "name": "Product Cards",
  "settings": [],
  "blocks": [],
  "presets": [
    { "name": "Product Cards" }
  ]
}
{% endschema %}
