{% comment %}
  Modern Product Grid Section
  Enhanced product cards with full theme editor controls
{% endcomment %}

{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}
{{ 'modern-product-cards.css' | asset_url | stylesheet_tag }}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<link rel="preconnect" href="https://cdn.shopify.com">

{%- style -%}
  .modern-product-grid-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .modern-product-grid-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modern-product-grid-{{ section.id }} .card-wrapper {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(1) { animation-delay: 0.1s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(2) { animation-delay: 0.2s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(3) { animation-delay: 0.3s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{%- endstyle -%}

<div class="modern-product-grid modern-product-grid-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="modern-product-grid__header text-{{ section.settings.header_alignment }}">
        {%- if section.settings.title != blank -%}
          <h2 class="modern-product-grid__heading {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="modern-product-grid__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- liquid
      assign collection = collections[section.settings.collection]
      assign products_to_display = section.settings.products_to_show | default: 8
    -%}

    {%- if collection != blank and collection.products_count > 0 -%}
      <div class="modern-product-grid__container 
                  style-{{ section.settings.card_style }} 
                  hover-{{ section.settings.hover_effect }}
                  layout-{{ section.settings.layout_style }}"
           data-columns-desktop="{{ section.settings.columns_desktop }}"
           data-columns-mobile="{{ section.settings.columns_mobile }}">
        
        <div class="modern-product-grid__grid grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop">
          {%- assign skip_card_product_styles = false -%}
          {%- for product in collection.products limit: products_to_display -%}
            <div class="grid__item modern-card-item">
              <div class="modern-product-card-wrapper style-{{ section.settings.card_style }} hover-{{ section.settings.hover_effect }}">
                {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: section.settings.image_ratio,
                  show_secondary_image: section.settings.show_secondary_image,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  skip_styles: skip_card_product_styles,
                  section_id: section.id,
                  quick_add: section.settings.quick_add
                %}
              </div>
            </div>
            {%- assign skip_card_product_styles = true -%}
          {%- endfor -%}
        </div>

        {%- if section.settings.show_view_all and collection.products_count > products_to_display -%}
          <div class="modern-product-grid__view-all center">
            <a href="{{ collection.url }}" class="button button--{{ section.settings.button_style }}">
              {{ section.settings.button_label | default: 'View all products' }}
            </a>
          </div>
        {%- endif -%}
      </div>
    {%- else -%}
      <div class="modern-product-grid__empty">
        <p>No products found. Please select a collection with products.</p>
      </div>
    {%- endif -%}
  </div>
</div>

