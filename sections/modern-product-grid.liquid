{% comment %}
  Modern Product Grid Section - Unique Custom Design
  Original product cards with full theme editor controls
{% endcomment %}

{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'custom-product-cards.css' | asset_url | stylesheet_tag }}

<script src="{{ 'custom-product-cards.js' | asset_url }}" defer="defer"></script>

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<link rel="preconnect" href="https://cdn.shopify.com">

{%- style -%}
  .modern-product-grid-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .modern-product-grid-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modern-product-grid-{{ section.id }} .card-wrapper {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(1) { animation-delay: 0.1s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(2) { animation-delay: 0.2s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(3) { animation-delay: 0.3s; }
  .modern-product-grid-{{ section.id }} .card-wrapper:nth-child(4) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{%- endstyle -%}

<div class="modern-product-grid modern-product-grid-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="modern-product-grid__header text-{{ section.settings.header_alignment }}">
        {%- if section.settings.title != blank -%}
          <h2 class="modern-product-grid__heading {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="modern-product-grid__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- liquid
      assign collection = collections[section.settings.collection]
      assign products_to_display = section.settings.products_to_show | default: 8
      
      assign columns_mobile_int = section.settings.columns_mobile | plus: 0
      assign columns_desktop_int = section.settings.columns_desktop | plus: 0
      
      assign show_mobile_slider = false
      if section.settings.enable_mobile_slider and products_to_display > columns_mobile_int
        assign show_mobile_slider = true
      endif
      
      assign show_desktop_slider = false
      if section.settings.enable_desktop_slider and products_to_display > columns_desktop_int
        assign show_desktop_slider = true
      endif
    -%}

    {%- if collection != blank and collection.products_count > 0 -%}
      <slider-component class="slider-mobile-gutter{% if show_mobile_slider == false %} page-width{% endif %}{% if show_desktop_slider == false %} page-width-desktop{% endif %}{% if show_desktop_slider %} slider-component-desktop{% endif %}">
        <div class="modern-product-grid__container 
                    style-{{ section.settings.card_style }} 
                    hover-{{ section.settings.hover_effect }}
                    layout-{{ section.settings.layout_style }}"
             data-columns-desktop="{{ section.settings.columns_desktop }}"
             data-columns-mobile="{{ section.settings.columns_mobile }}">
          
          <ul id="Slider-{{ section.id }}"
              data-id="{{ section.id }}"
              class="modern-product-grid__grid grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}"
              role="list">
            {%- for product in collection.products limit: products_to_display -%}
              <li class="grid__item modern-card-item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}">
                <div class="custom-product-card card-style--{{ section.settings.card_style }} hover--{{ section.settings.hover_effect }}"
                     data-product-id="{{ product.id }}">
                  
                  {%- comment -%} Product Image Section {%- endcomment -%}
                  <div class="custom-product-card__image-container">
                    <a href="{{ product.url }}" class="custom-product-card__image-link" aria-label="{{ product.title | escape }}">
                      {%- if product.featured_media -%}
                        <div class="custom-product-card__image-wrapper ratio--{{ section.settings.image_ratio }}">
                          <img
                            srcset="
                              {%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                              {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                              {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                              {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                              {{ product.featured_media | image_url }} {{ product.featured_media.width }}w"
                            src="{{ product.featured_media | image_url: width: 533 }}"
                            alt="{{ product.featured_media.alt | escape }}"
                            class="custom-product-card__image custom-product-card__image--primary"
                            loading="lazy"
                            width="{{ product.featured_media.width }}"
                            height="{{ product.featured_media.height }}">
                          
                          {%- if section.settings.show_secondary_image and product.media[1] != null -%}
                            <img
                              srcset="
                                {%- if product.media[1].width >= 165 -%}{{ product.media[1] | image_url: width: 165 }} 165w,{%- endif -%}
                                {%- if product.media[1].width >= 360 -%}{{ product.media[1] | image_url: width: 360 }} 360w,{%- endif -%}
                                {%- if product.media[1].width >= 533 -%}{{ product.media[1] | image_url: width: 533 }} 533w,{%- endif -%}
                                {{ product.media[1] | image_url }} {{ product.media[1].width }}w"
                              src="{{ product.media[1] | image_url: width: 533 }}"
                              alt="{{ product.media[1].alt | escape }}"
                              class="custom-product-card__image custom-product-card__image--secondary"
                              loading="lazy"
                              width="{{ product.media[1].width }}"
                              height="{{ product.media[1].height }}">
                          {%- endif -%}
                        </div>
                      {%- else -%}
                        <div class="custom-product-card__image-wrapper ratio--{{ section.settings.image_ratio }}">
                          <div class="custom-product-card__placeholder">
                            {{ 'product-1' | placeholder_svg_tag: 'custom-product-card__placeholder-svg' }}
                          </div>
                        </div>
                      {%- endif -%}
                    </a>

                    {%- comment -%} Badges {%- endcomment -%}
                    {%- if section.settings.show_badges -%}
                      <div class="custom-product-card__badges position--{{ section.settings.badge_position }}">
                        {%- if product.available == false -%}
                          <span class="custom-badge custom-badge--sold-out">
                            <svg class="custom-badge__icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                              <path d="M2 2l8 8M10 2l-8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                            Sold Out
                          </span>
                        {%- elsif product.compare_at_price > product.price and product.available -%}
                          <span class="custom-badge custom-badge--sale">
                            {%- if section.settings.show_sale_percentage -%}
                              {%- assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -%}
                              <svg class="custom-badge__icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                                <path d="M6 1l1.5 3 3.5.5-2.5 2.5.5 3.5L6 9l-3 1.5.5-3.5L1 4.5l3.5-.5L6 1z" fill="currentColor"/>
                              </svg>
                              -{{ discount }}%
                            {%- else -%}
                              Sale
                            {%- endif -%}
                          </span>
                        {%- endif -%}
                        
                        {%- if section.settings.show_new_badge -%}
                          {%- assign days_since_published = 'now' | date: '%s' | minus: product.published_at | date: '%s' | divided_by: 86400 -%}
                          {%- if days_since_published < section.settings.new_badge_days -%}
                            <span class="custom-badge custom-badge--new">
                              <svg class="custom-badge__icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
                                <circle cx="6" cy="6" r="5" stroke="currentColor" stroke-width="2"/>
                              </svg>
                              {{ section.settings.new_badge_text | default: 'New' }}
                            </span>
                          {%- endif -%}
                        {%- endif -%}
                      </div>
                    {%- endif -%}

                    {%- comment -%} Quick Actions {%- endcomment -%}
                    {%- unless section.settings.quick_add == 'none' -%}
                      <div class="custom-product-card__quick-actions">
                        {%- if product.available -%}
                          <button type="button" 
                                  class="custom-quick-action custom-quick-action--cart"
                                  data-product-id="{{ product.selected_or_first_available_variant.id }}"
                                  aria-label="Add {{ product.title }} to cart">
                            <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                              <path d="M6 16a1 1 0 100-2 1 1 0 000 2zM13 16a1 1 0 100-2 1 1 0 000 2z" fill="currentColor"/>
                              <path d="M1 1h2l.4 2M3.4 3h13l-1.3 6.5H5.4L3.4 3zm0 0L5 13h9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </button>
                        {%- endif -%}
                        <button type="button" 
                                class="custom-quick-action custom-quick-action--view"
                                data-product-url="{{ product.url }}"
                                aria-label="Quick view {{ product.title }}">
                          <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
                            <path d="M1 9s3-6 8-6 8 6 8 6-3 6-8 6-8-6-8-6z" stroke="currentColor" stroke-width="1.5"/>
                            <circle cx="9" cy="9" r="2.5" stroke="currentColor" stroke-width="1.5"/>
                          </svg>
                        </button>
                      </div>
                    {%- endunless -%}
                  </div>

                  {%- comment -%} Product Details Section {%- endcomment -%}
                  <div class="custom-product-card__details text-align--{{ section.settings.text_alignment }}">
                    
                    {%- if section.settings.show_vendor and product.vendor -%}
                      <div class="custom-product-card__vendor">{{ product.vendor }}</div>
                    {%- endif -%}

                    <h3 class="custom-product-card__title">
                      <a href="{{ product.url }}" class="custom-product-card__title-link">
                        {{ product.title | escape }}
                      </a>
                    </h3>

                    {%- if section.settings.show_description and product.description != blank -%}
                      <p class="custom-product-card__description">
                        {{ product.description | strip_html | truncatewords: section.settings.description_words }}
                      </p>
                    {%- endif -%}

                    <div class="custom-product-card__price-wrapper">
                      {%- if product.compare_at_price > product.price -%}
                        <div class="custom-product-card__price custom-product-card__price--on-sale">
                          <span class="custom-price custom-price--sale">{{ product.price | money }}</span>
                          <span class="custom-price custom-price--compare">{{ product.compare_at_price | money }}</span>
                        </div>
                      {%- else -%}
                        <div class="custom-product-card__price">
                          <span class="custom-price">{{ product.price | money }}</span>
                        </div>
                      {%- endif -%}
                    </div>

                    {%- if section.settings.show_rating and product.metafields.reviews.rating.value != blank -%}
                      <div class="custom-product-card__rating">
                        {%- assign rating_value = product.metafields.reviews.rating.value -%}
                        {%- assign rating_count = product.metafields.reviews.rating_count | default: 0 -%}
                        <div class="custom-rating">
                          <div class="custom-rating__stars">
                            {%- for i in (1..5) -%}
                              <svg class="custom-rating__star{% if i <= rating_value %} custom-rating__star--filled{% endif %}" width="14" height="14" viewBox="0 0 14 14" fill="none">
                                <path d="M7 1l1.5 3 3.5.5-2.5 2.5.5 3.5L7 9.5l-3 1.5.5-3.5L2 5l3.5-.5L7 1z" fill="currentColor"/>
                              </svg>
                            {%- endfor -%}
                          </div>
                          {%- if rating_count > 0 -%}
                            <span class="custom-rating__count">({{ rating_count }})</span>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </div>

        {%- if show_mobile_slider or show_desktop_slider -%}
          <div class="slider-buttons no-js-hidden">
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'general.slider.previous_slide' | t }}"
              aria-controls="Slider-{{ section.id }}">
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ products_to_display }}</span>
            </div>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'general.slider.next_slide' | t }}"
              aria-controls="Slider-{{ section.id }}">
              <span class="svg-wrapper">
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>
        {%- endif -%}
      </slider-component>

        {%- if section.settings.show_view_all and collection.products_count > products_to_display -%}
          <div class="modern-product-grid__view-all center">
            <a href="{{ collection.url }}" class="button button--{{ section.settings.button_style }}">
              {{ section.settings.button_label | default: 'View all products' }}
            </a>
          </div>
        {%- endif -%}
      </div>
    {%- else -%}
      <div class="modern-product-grid__empty">
        <p>No products found. Please select a collection with products.</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
