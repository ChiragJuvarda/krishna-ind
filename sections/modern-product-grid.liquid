        {"value": "modern", "label": "Modern"},
        {"value": "minimal", "label": "Minimal"},
        {"value": "elevated", "label": "Elevated"},
        {"value": "bordered", "label": "Bordered"}
      ],
      "default": "modern"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Hover effect",
      "options": [
